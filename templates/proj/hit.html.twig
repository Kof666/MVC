    <form class="form_card21" method="post" action="">
        <p>your account: $ {{ players.account }}</p><br>
        <p>
            <input type="submit" name="hit" value="hit"
                onClick="this.form.action='{{ path('hit_post') }}';"
            >
            <input type="submit" name="stand" value="stand"
            onClick="this.form.action='{{ path('hit_post') }}';"
        >
        </p>
    </form>
    <div class="card_flex">
        <div class="game_info">
            <h2>Dealer</h2>
            <p>points: {{ game.firstBankCard }}</p>
        </div>
        <ul class="ul-game">
            <div class="card">
                <li class="card-topp">{{ bankHand | first }}</li>
                <li class="card-mid"><img src="{{ asset('img/bth.png') }}" alt="bth-logo"></li>
                <li class="card-bottom">{{ bankHand | first }}</li>
            </div>
            <div class="back-card"></div>

        </ul>
    </div>

    <div class="space">
        {{ include('card/flash.html.twig') }}
    </div>

    {% if player is not null %}
    <div class="card_flex">
        <div class="game_info">
            <h2>{{ player.name }}</h2>
            <p>points: {{ game.playerScore }}</p>
        </div>
        <ul class="ul-game">
            {% for card in playerHand %}
                <div class="card">
                    <li class="card-topp">{{ card }}</li>
                    <li class="card-mid"><img src="{{ asset('img/bth.png') }}" alt="bth-logo"></li>
                    <li class="card-bottom">{{ card }}</li>
                </div>
            {% endfor %}
        </ul>
    </div>
    {% endif %}

